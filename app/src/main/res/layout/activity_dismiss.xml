<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_bg"
    android:padding="24dp"
    tools:context=".DismissActivity">

    <TextView
        android:id="@+id/challengeInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Challenge Instructions Appear Here" />

    <LinearLayout
        android:id="@+id/shakeChallengeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeInstructions"
        app:layout_constraintVertical_bias="0.4"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake your phone!"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <com.example.sleepshaker.customviews.ShakeProgressView
            android:id="@+id/customShakeProgressView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mathChallengeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/challengeInstructions"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/mathQuestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="14 + 29 = ?" />

        <EditText
            android:id="@+id/mathAnswerInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary_indigo"
            android:ems="5"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mathSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Submit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/luxChallengeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp"
        android:background="@android:color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Challenge"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point your phone toward a bright light source"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <!-- REPLACE: Remove any old TextViews, add CustomView -->
        <com.example.sleepshaker.customviews.LightSensorView
            android:id="@+id/customLightSensorView"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_margin="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/stepChallengeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="20dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step Challenge"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk around to dismiss the alarm!"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="20dp" />

        <!-- REPLACE: Remove old TextView, add CustomView -->
        <com.example.sleepshaker.customviews.StepCounterView
            android:id="@+id/customStepCounterView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>